<div class="mt-4">
    <form method="post" action="">
        <div class="mb-3">
            <label for="search-input" class="form-label">Keyword</label>
            <input type="text" class="form-control" name="q" id="search-input" aria-describedby="searchHelp">
            <div id="searchHelp" class="form-text">Search info.</div>
        </div>

        <div class="form-group">
            <label for="gender-input">Sexs</label>
            <select name="gender" class="form-select" aria-label="Default select example" id="gender-input">
                <option selected>Select gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
            </select>
        </div>


        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>